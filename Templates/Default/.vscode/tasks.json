{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "cd Source/Building && sh Build.sh",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build & Run",
            "type": "shell",
            "command": "cd Source/Building && python Build.py -l True",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
            "kind": "build",
            "isDefault": false
            }
        }
    ]
}